@model IQueryable<SportsStore.Models.Product>
@{
    ViewBag.Title = "SportsStore - List Products";
}
@foreach (var p in Model ??
Enumerable.Empty<SportsStore.Models.Product>())
{
    <div>
        <h3>@p.Name</h3>
        @p.Description
        <h4>@p.Price.ToString("c")</h4>
    </div>
}